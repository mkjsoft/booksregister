<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="{{ path('index') }}">Booksregister</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('book_add') }}">Add book</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('book') }}">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('author') }}">Authors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('bookcase') }}">Bookcases</a>
                        </li>
                    </ul>
                </div>
                <span>Logged as: {{ app.user.email }}</span>
                <a class="btn btn-outline-primary ml-3" href="{{ path('app_logout') }}">Logout</a>
            </nav>
            <div class="mt-3" id="content">
                {% block content %}{% endblock %}
            </div>
        {% endblock %}
    </body>
</html>
